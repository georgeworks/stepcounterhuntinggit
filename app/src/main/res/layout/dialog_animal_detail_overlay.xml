<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Background image fills entire dialog -->
    <ImageView
        android:id="@+id/detail_animal_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerInside" />

    <!-- Rarity text above the star (top-right area) -->
    <TextView
        android:id="@+id/detail_animal_rarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="30dp"
        android:text="Uncommon"
        android:textSize="14sp"
        android:textColor="#8B4513"
        android:textStyle="bold" />

    <!-- Name at the top area of the card -->
    <TextView
        android:id="@+id/detail_animal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Hellbender"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5" />

    <!-- Scientific name (description) below the main name -->
    <TextView
        android:id="@+id/detail_animal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="82dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Cryptobranchus alleganiensis"
        android:textSize="13sp"
        android:textColor="#FFD700"
        android:textStyle="italic|bold"
        android:textIsSelectable="true"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <!-- Region below the scientific name -->
    <TextView
        android:id="@+id/detail_animal_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="110dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Found in: The Appalachians"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <!-- Fun fact in the bottom text box area -->

    <TextView
        android:id="@+id/detail_animal_fun_fact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:lineSpacingMultiplier="1.1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Fun fact goes here"
        android:textColor="#3E2723"
        android:textSize="13sp" />

</FrameLayout>