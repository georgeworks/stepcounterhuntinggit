<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hunter Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp" />

        <!-- Keep original TextViews hidden for backward compatibility -->
        <TextView
            android:id="@+id/total_steps_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Steps: 0"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/animals_collected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animals Collected: 0"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/regions_explored_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regions Explored: 0"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- Main Stats Cards Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Total Steps Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stat_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="6dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Steps"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/total_steps_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/daily_average_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 daily avg"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Animals Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stat_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="6dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animals"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/animals_collected_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/unique_animals_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unique"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Main Stats Cards Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Regions Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stat_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="6dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regions"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/regions_explored_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_purple"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/regions_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 25 total"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Lures Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stat_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="6dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lures"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/lures_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/lures_earned_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 earned total"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Rarity Distribution -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stat_card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection by Rarity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Common -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Common"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/common_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/common_count"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Uncommon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Uncommon"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/uncommon_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@android:color/holo_green_dark" />

                <TextView
                    android:id="@+id/uncommon_count"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Rare -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Rare"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/rare_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/rare_count"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Legendary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Legendary"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/legendary_progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@android:color/holo_orange_light" />

                <TextView
                    android:id="@+id/legendary_count"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hunt Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stat_card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hunt Statistics"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Hunts:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_hunts_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avg Steps per Hunt:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/avg_steps_per_hunt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Favorite Region:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/favorite_region_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None yet"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Region Completion Stamps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region Stamps"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- US Regions Grid -->
                <GridLayout
                    android:id="@+id/regions_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:alignmentMode="alignBounds"
                    android:useDefaultMargins="true">

                    <!-- Stamps will be added programmatically -->

                </GridLayout>
            </LinearLayout>

            <!-- Country Completion Stamps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country Stamps"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Countries Grid -->
                <GridLayout
                    android:id="@+id/countries_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:alignmentMode="alignBounds"
                    android:useDefaultMargins="true">

                    <!-- Stamps will be added programmatically -->

                </GridLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</ScrollView>